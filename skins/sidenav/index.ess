padding 1rem

&-sublinks,
&-links
  margin-left 0
  min-width 10rem
  padding-left 0

&-sublink,
&-link
  list-style none
  text-decoration none

  &-anchor
    &:after
      border-bottom none

&-link
  margin-bottom 2rem
  &-anchor
    color = __.color.black.lighter
    font-size = __.h6
    text-transform uppercase
    &.is-active
      color = __.color.primary

&-sublink
  &-anchor
    &.is-active
      color = __.color.primary